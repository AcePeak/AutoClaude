{
  "name": "autoclaude",
  "version": "2.0.0",
  "description": "Multi-AI agent collaboration tool for continuous development",
  "main": "src/main.js",
  "bin": {
    "autoclaude": "src/cli/index.js"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "watcher": "node src/core/watcher.js",
    "init": "node src/cli/init.js",
    "cli": "node src/cli/index.js"
  },
  "author": {
    "name": "AcePeak",
    "email": "acepeak@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AcePeak/AutoClaude.git"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "electron-store": "^8.1.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.acepeak.autoclaude",
    "productName": "AutoClaude",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "src/**/*",
      "templates/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "templates",
        "to": "templates"
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.png",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
